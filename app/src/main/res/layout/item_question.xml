<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:adjustViewBounds="true"
    android:background="@drawable/recyclerview_round_outline">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="201dp"
        android:layout_height="97dp"
        android:layout_marginStart="4dp"
        android:text="1."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/yourAnswerTextView"
        android:layout_width="179dp"
        android:layout_height="43dp"
        android:layout_marginEnd="4dp"
        android:text="Your answer: "
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/correctAnswerTextView"
        app:layout_constraintEnd_toEndOf="@+id/correctAnswerTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <TextView
        android:id="@+id/correctAnswerTextView"
        android:layout_width="185dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:text="Correct answer:"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintStart_toEndOf="@+id/questionText"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>